<!-- Creating a partial which will used to share the code of the form for new and edit -->
<%=form_with model: article do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :title,{ class: "form-label"}%><br>
        <%=form.text_field :title,{ class: "form-control", placeholder: "Title" } %>
        <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %>></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%=form.label :body,{ class: "form-label"} %>
        <%=form.text_area :body ,{ class: "form-control", placeholder: "Article Body" }%>
        <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%=form.label "Photo" %>
        <%=form.file_field :avatar %><br>
      </div>
      <div>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
