<h1>Articles</h1>
<table class="table table-striped">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Article</th>
  </tr>
  </thead>
  <tbody>
    <%  @articles.each do |article| %>
      <tr>
        <td><%=link_to article.title, article %></td><!-- or you can use article_path(article) -->
        <td><%= link_to "Edit",edit_article_path(article) %></td>
        <td><%= link_to "Destroy" ,article_path(article),method: :delete,data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Article", new_article_path,class: "btn btn-primary" %> <!-- new_article_path -> /articles/new (as seen on Rails Routes command) -->
